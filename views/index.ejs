<!doctype html>
<html lang="en-US">
<head>
    <% include ./layout/head %>
</head>

<body>
    <header role="banner">
        <div class="container pt-3 pb-3">
            <div class="row">
                <div class="col-12">
                    <h1>
                        <%= heading %>
                    </h1>
                </div>
            </div>
        </div>
    </header>
    <section role="form">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-6">
                    <form action="/add" class="form mt-4 mb-4" id="formSubmit" method="post">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" name="name" autocomplete="off" autofocus required maxlength="50" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="email" name="email" autocomplete="off" required maxlength="50" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" name="password" autocomplete="off" required maxlength="50" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <input type="text" name="phone" placeholder="111-111-111" autocomplete="off" required maxlength="9" class="form-control">
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-submit">Sign up <i class="fas fa-paper-plane"></i></button>
                        </div>
                    </form>
                    <!-- Submit outputs -->
                    <div id="validationSuccess" class="text-center mb-3"></div>
                    <div id="validationError" class="text-center mb-3"></div>
                </div>
            </div>
        </div>
    </section>
    <section role="contentinfo">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-8">
                    <table class="table table-hover mt-4 mb-4">
                        <tbody>
                            <tr class="table__tr--highlight">
                                <td>#</td>
                                <td>Name</td>
                                <td>E-mail</td>
                                <td>Phone Number</td>
                                <td>Actions</td>
                            </tr>
                            <% for (var i = 0; i < user.length; i++) { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= user[i].name %></td>
                                <td><%= user[i].email %></td>
                                <td><%= user[i].phone %></td>
                                <td class="remove">
                                    <a href="/remove/<%= user[i]._id %>" class="table-action">
                                        <i class="fas fa-trash"></i>
                                        Remove
                                    </a>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="./javascripts/form.js"></script>
</body>
</html>